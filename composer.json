{
    "name": "houdaslassi/vantage",
    "description": "Vantage: Strategic queue monitoring and observability for Laravel applications.",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "HoudaSlassi\\Vantage\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "HoudaSlassi\\Vantage\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2|^8.3",
    "illuminate/support": "^10.0|^11.0|^12.0",
    "illuminate/queue": "^10.0|^11.0|^12.0",
    "illuminate/events": "^10.0|^11.0|^12.0",
    "illuminate/notifications": "^10.0|^11.0|^12.0"
  },
  "require-dev": {
    "orchestra/testbench": "^8.0|^9.0|^10.0",
    "pestphp/pest": "^2.0|^3.0",
    "rector/rector": "^2.2"
  },
  "extra": {
    "laravel": {
      "providers": [
            "HoudaSlassi\\Vantage\\VantageServiceProvider"
      ]
    }
  },
  "scripts": {
    "test": "pest",
    "test:coverage": "pest --coverage --min=50",
    "lint": "php -l src",
    "analyse": "php -d memory_limit=512M vendor/bin/phpstan analyse",
    "analyse:baseline": "php -d memory_limit=512M vendor/bin/phpstan analyse --generate-baseline",
    "rector": "rector process",
    "rector:dry": "rector process --dry-run",
    "quality": [
      "@lint",
      "@analyse",
      "@rector:dry",
      "@test"
    ],
    "quality:fix": [
      "@rector",
      "@test"
    ]
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
